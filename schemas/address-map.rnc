namespace xi = "http://www.w3.org/2001/XInclude"

start = address-map

address-map = element address-map {
   attribute xml:base { text }?,
   (block* & element xi:include {
      attribute href { text },
      empty
   }*)
}

include "block.rnc" {
   start |= notAllowed
}
