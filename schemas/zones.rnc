datatypes xsd = "http://www.w3.org/2001/XMLSchema-datatypes"

start = zones

zones = element zones {
   attribute xml:base { text }?,
   attribute base { text },
   element zone {
      attribute name { text },
      attribute directory { text },
      attribute ttl { xsd:integer }?,
      empty
   }*
}
